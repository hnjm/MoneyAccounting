<Window x:Class="Money_Accounting.money.namely_RemoveMoney"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Money_Accounting.money"
        mc:Ignorable="d"
        Title="namely_RemoveMoney" Height="450" Width="800">
    <Grid>
        <Label Content="Введите сумму снятия" HorizontalAlignment="Center" Margin="0,74,0,0" VerticalAlignment="Top" Height="30" Width="200"/>

        <TextBox Name="NumberOfMoney" HorizontalAlignment="Center" Height="30" Margin="0,109,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="200"/>

        <Label Content="Куда потрачено" HorizontalAlignment="Center" Margin="0,165,0,0" VerticalAlignment="Top" Width="200" Height="30"/>

        <TextBox Name="Reason" HorizontalAlignment="Center" Height="30" Margin="0,200,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="200"/>

        <Button Content="Удалить" HorizontalAlignment="Center" Margin="0,265,0,0" VerticalAlignment="Top" Width="200" Height="30" Click="Remove_Click"/>
    </Grid>
</Window>
