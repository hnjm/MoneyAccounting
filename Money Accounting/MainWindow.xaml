<Window x:Class="Money_Accounting.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Money_Accounting"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Button Content="Добавить деньги" HorizontalAlignment="Center" Margin="0,122,0,0" VerticalAlignment="Top" Width="200" Height="25" Click="AddMoney_Click"/>
        <Button Content="Удалить деньги" HorizontalAlignment="Center" Margin="0,162,0,0" VerticalAlignment="Top" Width="200" Height="25" Click="RemoveMoney_Click"/>
        <Button Content="Посмотреть деньги" HorizontalAlignment="Center" Margin="0,202,0,0" VerticalAlignment="Top" Width="200" Height="25" Click="SeeMoney_Click"/>

    </Grid>
</Window>
